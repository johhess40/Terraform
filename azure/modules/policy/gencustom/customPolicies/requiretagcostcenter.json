{
    "name": "require-tag-cost-rgs",
    "properties": {
        "displayName": "Require CostCenter tags on Burlington on Resource Groups",
        "policyType": "Custom",
        "mode": "All",
        "description": "Denies creation of resource group with no tags",
        "metadata": {
            "category": "Tags"
        },
        "parameters": {
            "tagName": {
                "type": "string",
                "metadata": {
                    "displayName": "Tags",
                    "description": "Tag required on Burlington Resource Groups"
                }
            }
        },
        "policyRule": {
            "if": {
                "allOf": [{
                        "field": "type",
                        "equals": "Microsoft.Resources/subscriptions/resourceGroups"
                    },
                    {
                        "field": "[concat('tags[', parameters('tagName'), ']')]",
                        "exists": "false"
                    }
                ]
            },
            "then": {
                "effect": "audit"
            }
        }
    }
}